<body class = "main-user-container">

<div class = "log-in-container">
<h1>Log In</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: 'Email' %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } , placeholder: 'Password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions user-form-button-1">
    <%= f.button :submit, "Log in", :class => 'submit-button'  %>
  </div>
<% end %>
    <div class="user-form-button">
      <%= render "devise/shared/links" %>
      </div>
</body>