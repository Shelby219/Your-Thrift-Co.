    
<body>
<main role="main">    
<div class=" bg-light">
     
    <h2 class="heading-profile "><%= @user.username%> Store Reviews</h2>


    <% if  @user_reviews.empty?  %>
    <h5>You have no reviews yet</h5>         
    <%else%>
            <section class="container item-index-container">
                        <div class="row">
                                
                                <% @user_reviews.each do |user_review| %>
                                        <div class=" column index-item-wrapper review-border"> 
                                                        <div class = "image-wrapper ">
                                                                        <div class="item-title-price">
                                                                        <%= user_review.rating %><br>
                                                                        <%= user_review.comment %>  
                                                                        </div>
                                                                    
                                                </div>      
                                        </div>  
                          
                                <% end %>    
                        </div> 
                             
            </section>
    <%end%>
    
    
  </div>  
</main>
</body>
 
