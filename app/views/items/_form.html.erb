


<%= form_with(model: @item, local:true) do |f| %>
  <%= render "shared/error_messages" %>
  

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: '...' %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :description %>
  <%= f.text_area :description, size: '30x5', placeholder: '...' %><br>
  <%= f.label :size %>
  <%= f.text_field  :size %><br>
  <%= f.label :colour %>
  <%= f.text_field  :colour %><br>
  <%= f.label :material %>
  <%= f.text_field  :material %><br>
  <%= f.label :location %>
  <%= f.text_field  :location%><br>
  <%= f.label :shipping %>
  <%= f.text_field  :shipping%><br>
  <%= f.label :images %> 
  <%= f.file_field :images, multiple: true , accept: 'image/png,image/gif,image/jpeg,image/jpg' %><br>


  <%= f.submit %>
<% end %>



